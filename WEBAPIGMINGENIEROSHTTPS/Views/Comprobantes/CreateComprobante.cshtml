@model WEBAPIGMINGENIEROSHTTPS.Models.Comprobante
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

@{
    ViewData["Title"] = "CreateComprobante";
}

<h1 class="text-primary">Registrar un nuevo Comprobante</h1>

<h4>Comprobante</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateComprobante">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Idcomprobante" class="control-label"></label>
                <input asp-for="Idcomprobante" class="form-control" readonly="true"/>
                <span asp-validation-for="Idcomprobante" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Fecha" class="control-label"></label>
                <input id="fecha" asp-for="Fecha" class="form-control" />
                <span asp-validation-for="Fecha" class="text-danger"></span>
            </div>

            <script>
                document.addEventListener("DOMContentLoaded", function () {
                    var fecha = new Date();
                    var dia = fecha.getDate();
                    var mes = fecha.getMonth() + 1; // Los meses en JavaScript empiezan desde 0
                    var ano = fecha.getFullYear();

                    if (dia < 10) {
                        dia = '0' + dia;
                    }

                    if (mes < 10) {
                        mes = '0' + mes;
                    }

                    var fechaHoy = ano + '-' + mes + '-' + dia;
                    document.getElementById('fecha').value = fechaHoy;
                });
            </script>

            <div class="form-group">
                <label asp-for="Numerodocumento" class="control-label"></label>
                <input asp-for="Numerodocumento" class="form-control" />
                <span asp-validation-for="Numerodocumento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ruc" class="control-label"></label>
                <input asp-for="Ruc" class="form-control" />
                <span asp-validation-for="Ruc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Razonsocial" class="control-label"></label>
                <input asp-for="Razonsocial" class="form-control" />
                <span asp-validation-for="Razonsocial" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Concepto" class="control-label"></label>
                <input asp-for="Concepto" class="form-control" />
                <span asp-validation-for="Concepto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Moneda" class="control-label"></label>
                <input asp-for="Moneda" class="form-control" />
                <span asp-validation-for="Moneda" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Importe" class="control-label"></label>
                <input asp-for="Importe" class="form-control" />
                <span asp-validation-for="Importe" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tipodocumento" class="control-label"></label>
                <input asp-for="Tipodocumento" class="form-control" />
                <span asp-validation-for="Tipodocumento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Emitidorecibido" class="control-label"></label>
                <input asp-for="Emitidorecibido" class="form-control" />
                <span asp-validation-for="Emitidorecibido" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="IndexComprobantes">Regresar</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}